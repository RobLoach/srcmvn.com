---
permalink: atom.xml
use:
    - posts
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title><![CDATA[{{ site.title }}]]></title>
  <link href="{{ site.url }}/atom.xml" rel="self"/>
  <link href="{{ site.url }}/"/>
  {% if site.hub_url %}<link href="{{ site.hub_url }}" rel="hub"/>{% endif %}
  <updated>{{ site.time|date("c") }}</updated>
  <id>{{ site.url }}/</id>
  <author>
    <name><![CDATA[{{ site.author }}]]></name>
    {% if site.email %}<email><![CDATA[{{ site.email }}]]></email>{% endif %}
  </author>
  <generator uri="http://getsculpin.com">Sculpin</generator>

  {% for post in data.posts %}
  <entry>
    <title type="html"><![CDATA[{{ post.title }}]]></title>
    <link href="{{ site.url }}{{ post.url }}/"/>
    <updated>{{ post.date|date("c") }}</updated>
    <id>{{ site.url }}{{ post.url }}</id>
    <content type="html"><![CDATA[{{ post.blocks.content|raw }}]]></content>
  </entry>
  {% endfor %}
</feed>
